<p id="notice"><%= notice %></p>

<h1>Questions</h1>
<br>
<strong id="new_question"><%= link_to 'New Question', new_question_path %></strong>
<br>
<br>
<table>
  <tbody>
    <% i=1 %>
    <% @questions.each do |question| %>
      <tr>
        <td><strong><%= i %>.) Content:<%= question.content %></strong></td>
      </tr>
      <tr>
        <td><strong>Option 1: </strong><%= question.option1 %></td>
      </tr>
      <tr>
        <td><strong>Option 2: </strong><%= question.option2 %></td>
      </tr>
      <tr>
        <td><strong>Option 3: </strong><%= question.option3 %></td>
      </tr>
      <tr>
        <td><strong>Option 4: </strong><%= question.option4 %></td>
      </tr>
      <tr>
        <td><strong>Answer: </strong><%= question.answer %></td>
      </tr>
      <tr>
        <td><strong>Explanation: </strong><%= question.explanation %></td>
      </tr>
      <tr>
        <td><strong>Topic: </strong><%= question.topic %></td>
      </tr>
      <tr>
        <td><strong>Feedback: </strong><%= question.feedback %></td>
      </tr>
      <tr>
        <td><strong>Approved: </strong><%= "Yes" if question.display==true %><%= "No" if question.display==false %></td>
      </tr>
      <% if current_user.admin? %>
        <tr>
        <td><strong>User_id: </strong><%= question.uid %></td>
      </tr>
      <% end %>
      <tr>
        <td>
          <table>
            <tr>
               <td><strong id="show"><%= link_to 'Show', question %></strong></td>
                <% if current_user.admin? %>
                 <td><strong id="edit"><%= link_to 'Edit', edit_question_path(question) %></strong></td>
                 <td><strong id="destroy"><%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>
                <% end %>
            </tr>
          </table>
        </td>
      </tr>
      <% i=i+1 %>
    <% end %>
  </tbody>
</table>

<br>

